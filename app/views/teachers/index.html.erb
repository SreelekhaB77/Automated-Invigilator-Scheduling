<%=render 'main/navbar'%>
<div class="content">
        <h2>About Me</h2>
    <div class="about_me">
        <label><i>NAME:</i><b> <%=current_teacher.name%></b></label><br>
        <label><i>EMAIL:</i><b> <%=current_teacher.email%></b></label><br>
        <label><i>DEPARTMENT:</i><b> <%=current_teacher.department%></b></label><br>
    </div>
    <h2>Duties Assigned</h2>
     <table class="table">
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Exam</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Class</th>
                    <th>Room</th>
                </tr>
            </thead>
            <tbody>
            <%@duties.each do|duty| %>
                <tr>
                    <td><%=duty.teacher.name%></td>
                    <td><%=duty.exam.course%></td>
                    <td><%=duty.exam.date%></td>
                    <td><%=duty.exam.time.to_formatted_s(:time)%></td>
                    <td><%=duty.exam.cls%></td>
                    <td><%=duty.exam.room%></td>
                </tr>
                <%end %>
            </tbody>
            
        </table>
        <%=link_to 'Change Password',teachers_change_password_path,{class: 'change_password'} %>
</div>
